#!/usr/bin/env bash

DOTFILES_DIR="$HOME/.dotfiles"

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1
SUB_COMMAND_NAME=$2

editor_name() {
    case $1 in
        "vim")
            echo "Vim"
            ;;
        "nvim")
            echo "Neovim"
            ;;
        "code")
            echo "Visual Studio Code"
            ;;
        *)
            echo "Unknown"
            ;;
    esac
}

sub_help () {
  echo "Usage: $BIN_NAME <command>"
  echo
  echo "Commands:"
  echo "   clean            Clean up caches and broken symbolic links"
  echo "   edit             Open dotfiles in $(editor_name $VISUAL)"
  echo "   help             This help message"
  echo "   setup            Bootstrap your system"
  echo "   update           Update packages and software"
}

sub_edit() {
    sh -c "$VISUAL $DOTFILES_DIR"
}

sub_setup() {
    cd "$DOTFILES_DIR" || exit
    if ! command -v just >/dev/null 2>&1; then
        echo "Error: 'just' is not installed. Please install it before running this script."
        exit 1
    fi
    just setup
    cd - > /dev/null || exit
}

sub_clean() {
    cd "$DOTFILES_DIR" || exit
    if ! command -v just >/dev/null 2>&1; then
        echo "Error: 'just' is not installed. Please install it before running this script."
        exit 1
    fi
    just clean
    cd - > /dev/null || exit
}

sub_update() {
    # Check if topgrade is installed
    if ! command -v topgrade &> /dev/null; then
        echo "Error: 'topgrade' is not installed. Please install it before running this script."
        exit 1
    fi

    echo "Running topgrade to update packages"
    sleep 2
    topgrade --disable pnpm --disable yarn
}

case $COMMAND_NAME in
  "" | "-h" | "--help")
    sub_help
    ;;
  clean | edit | setup | update)
    shift
    sub_${COMMAND_NAME} "$@"
    ;;
  *)
    echo "'$COMMAND_NAME' is not a known command." >&2
    sub_help
    exit 1
    ;;
esac
